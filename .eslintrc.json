{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"extends": [
		"standard"
	],
	"plugins": [
		"@typescript-eslint",
		"simple-import-sort"
	],
	"rules": {
		"@typescript-eslint/naming-convention": "error",
		"@typescript-eslint/semi": ["error", "never"],
		"simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",
		"indent": ["error", "tab"],
		"no-tabs": "off",
		"semi": "off"
	},
	"ignorePatterns": [
		"out",
		"dist",
		"**/*.d.ts"
	]
}
