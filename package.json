{
	"name": "miyagi",
	"displayName": "miyagi",
	"description": "Use miyagi features directly in VS Code.",
	"publisher": "fynn",
	"version": "0.9.0",
	"preview": true,
	"license": "MIT",
	"categories": [
		"Linters",
		"Other"
	],
	"keywords": [
		"miyagi"
	],
	"homepage": "https://github.com/miyagi-dev/vscode-miyagi#readme",
	"bugs": {
		"url": "https://github.com/miyagi-dev/vscode-miyagi/issues",
		"email": "post@fynn.be"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/miyagi-dev/vscode-miyagi.git"
	},
	"qna": "https://github.com/miyagi-dev/vscode-miyagi/discussions",
	"icon": "images/icon.png",
	"galleryBanner": {
		"color": "#062b3e",
		"theme": "dark"
	},
	"engines": {
		"vscode": "^1.75.0"
	},
	"main": "./out/extension.js",
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"commands": [
			{
				"command": "miyagi.newComponent",
				"title": "New Component",
				"category": "miyagi",
				"enablement": "miyagi.hasMiyagi && miyagi.canNewComponent"
			},
			{
				"command": "miyagi.lintComponent",
				"category": "miyagi",
				"title": "Lint Component",
				"enablement": "miyagi.hasMiyagi && miyagi.canLint"
			},
			{
				"command": "miyagi.lintAllComponents",
				"category": "miyagi",
				"title": "Lint All Components",
				"enablement": "miyagi.hasMiyagi && miyagi.canLint"
			},
			{
				"command": "miyagi.generateMocks",
				"category": "miyagi",
				"title": "Generate Mocks",
				"enablement": "miyagi.hasMiyagi && miyagi.canGenerateMocks"
			},
			{
				"command": "miyagi.reload",
				"category": "miyagi",
				"title": "Reload"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "miyagi.lintComponent",
					"when": "never"
				},
				{
					"command": "miyagi.generateMocks",
					"when": "never"
				}
			],
			"explorer/context": [
				{
					"submenu": "miyagi/explorer",
					"group": "1_modification",
					"when": "miyagi.hasMiyagi"
				}
			],
			"miyagi/explorer": [
				{
					"command": "miyagi.newComponent",
					"group": "component@1",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "miyagi.lintComponent",
					"group": "component@2",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "miyagi.generateMocks",
					"group": "component@3",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "miyagi.reload",
					"group": "control@1",
					"when": "resourceFilename =~ /\\.miyagi\\.js(on)?/"
				}
			]
		},
		"submenus": [
			{
				"id": "miyagi/explorer",
				"label": "miyagi"
			}
		]
	},
	"scripts": {
		"watch": "esbuild $npm_package_config_esbuild --sourcemap --watch",
		"lint": "eslint src --ext ts",
		"typecheck": "tsc --project ./ --noEmit",
		"prebuild": "npm run lint && npm run typecheck",
		"build": "esbuild $npm_package_config_esbuild --minify",
		"version": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file && git add CHANGELOG.md",
		"vscode:prepublish": "npm run build"
	},
	"config": {
		"esbuild": "./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node"
	},
	"dependencies": {
		"deepmerge": "^4.3.0",
		"yaml": "^2.2.1"
	},
	"devDependencies": {
		"@pangolinjs/eslint-config": "^7.0.1",
		"@types/json-schema": "^7.0.11",
		"@types/node": "^18.14.2",
		"@types/vscode": "^1.75.1",
		"@typescript-eslint/eslint-plugin": "^5.54.0",
		"@typescript-eslint/parser": "^5.54.0",
		"conventional-changelog-cli": "^2.2.2",
		"esbuild": "^0.17.11",
		"eslint": "^8.35.0",
		"typescript": "^4.9.5"
	}
}
