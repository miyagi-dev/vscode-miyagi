{
	"compilerOptions": {
		// Input
		"rootDir": "src",
		"esModuleInterop": true,

		// Output
		"module": "commonjs",
		"target": "ESNext",
		"lib": ["ESNext"],
		"outDir": "out",
		"sourceMap": true,

		// Type Checking
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	}
}
